{
  "name": "claude-radar",
  "version": "0.1.0",
  "description": "TUI dashboard for monitoring Claude Code agent tasks and todos",
  "type": "module",
  "bin": {
    "claude-radar": "./dist/index.js"
  },
  "scripts": {
    "dev": "NODE_ENV=production tsx src/index.tsx",
    "build": "tsup src/index.tsx --format esm --dts --env.NODE_ENV production",
    "start": "NODE_ENV=production node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "ink": "^5.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^18.3.18",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
